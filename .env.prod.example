# Cosmos 2048 - Production Environment Variables
# Copia questo file in .env.prod e configura i valori per la produzione

# JWT Secret (GENERA UN NUOVO SECRET SICURO!)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Domain configuration
DOMAIN=localhost
HTTPS_ENABLED=false

# SSL Configuration (opzionale)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# MongoDB Production
MONGODB_USER=cosmos2048_user
MONGODB_PASSWORD=secure_mongo_password
MONGODB_DATABASE=cosmos2048_prod

# API Configuration
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=15

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/cosmos2048.log

# Performance
NODE_OPTIONS="--max_old_space_size=2048"

# Security
HELMET_CSP_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost,https://yourdomain.com

# Analytics (opzionale)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# NFT Minting (Produzione)
STARGAZE_RPC_URL=https://rpc.stargaze-apis.com
STARGAZE_REST_URL=https://rest.stargaze-apis.com
NFT_CONTRACT_ADDRESS=stars1your-contract-address
NFT_MINTER_MNEMONIC=your-minter-wallet-mnemonic