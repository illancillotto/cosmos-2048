# Cosmos 2048 Web Application Environment Variables
# Copy this file to .env and fill in your values

# ===== APPLICATION =====
NEXT_PUBLIC_APP_NAME=Cosmos 2048
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# ===== API CONFIGURATION =====
NEXT_PUBLIC_API_URL=http://localhost:5017
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_VERSION=v1

# ===== COSMOS NETWORK =====
NEXT_PUBLIC_COSMOS_CHAIN_ID=stargaze-1
NEXT_PUBLIC_COSMOS_RPC_URL=https://rpc.stargaze-apis.com
NEXT_PUBLIC_COSMOS_REST_URL=https://rest.stargaze-apis.com
NEXT_PUBLIC_COSMOS_BECH32_PREFIX=stars
NEXT_PUBLIC_COSMOS_CURRENCY=ustars
NEXT_PUBLIC_COSMOS_DECIMALS=6

# ===== STARGAZE NFT =====
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=
NEXT_PUBLIC_BASE_TOKEN_URI=
NEXT_PUBLIC_ENABLE_NFT_MINTING=false
NEXT_PUBLIC_NFT_METADATA_API=

# ===== FEATURE FLAGS =====
NEXT_PUBLIC_ENABLE_WHEEL_OF_FORTUNE=true
NEXT_PUBLIC_ENABLE_LEADERBOARD=true
NEXT_PUBLIC_ENABLE_BADGE_GALLERY=true
NEXT_PUBLIC_ENABLE_WALLET_CONNECTION=true

# ===== ANALYTICS =====
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ANALYTICS_PROVIDER=google

# ===== PERFORMANCE =====
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_OFFLINE_SUPPORT=false
NEXT_PUBLIC_CACHE_DURATION=3600

# ===== SECURITY =====
NEXT_PUBLIC_ENABLE_HTTPS_ONLY=false
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_HSTS=true

# ===== DEVELOPMENT =====
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_LOGGING=true
NEXT_PUBLIC_LOG_LEVEL=info

# ===== END OF FILE =====

